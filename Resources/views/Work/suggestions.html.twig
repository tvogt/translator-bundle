{% if suggestions|length > 0 %}
	<table>
		<thead>
			<tr><th colspan=4>{{ 'suggestions'|trans({}, "translatorbundle") }}</th></tr>
		</thead>
		<tbody>
		{% for suggestion in suggestions %}
			<tr>
				<td>{{ suggestion.content }}</td>
				<td align="right">{{ suggestion.votes }}</td>
				<td><button type="button" class="vote" data-type="up" data-id="{{ suggestion.id }}">+</button></td>
				<td><button type="button" class="vote" data-type="down" data-id="{{ suggestion.id }}">-</button></td>
				{% if is_granted("ROLE_ADMIN") %}
					<td><button type="button" class="accept" data-id="{{ suggestion.id }}">{{ 'button.accept'|trans({}, "translatorbundle") }}</button></td>
				{% endif %}
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endif %}